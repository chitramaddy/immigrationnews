<div class="wrapper">

    <div class="hero">

        <div class="header">
            <div class="title">
                <h1>Immigration News</h1>
                <button class="btn btn-primary" id="scrapeArt" type="submit">Scrape New Articles</button>
            </div>

        </div>

    </div>

<!--Articles scraped gets displayed here-->
    <div id="article-area">
        {{#each results}}
        <li>
            <p >Title: {{this.title}}</p>
            <img src={{this.img}} />
            <button data-artid="{{this._id}}" class="saveArt">Save Article!</button>
        </li>
        {{/each}}
    </div>

</div>